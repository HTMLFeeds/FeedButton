{
	"name": "feedbutton",
	"author": "Paul Gordon",
	"description": "Create buttons on websites to subscribe to HTML feeds.",
	"version": "1.0.0",
	"license": "MIT",
	"main": "feedbutton.js",
	"types": "feedbutton.d.ts",
	"files": [
		"feedbutton.js",
		"feedbutton.min.js",
		"feedbutton.d.ts",
		"feedbutton.d.ts.map",
		"package.json"
	],
	"scripts": {
		"bundle": "tsc -p tsconfig.release.json && terser ./+build/feedbutton.debug.js > ./+build/feedbutton.min.js",
		"test": "exit 0",
		"esm": "sed 's/\"use strict\";/export/' ./+build/feedbutton.js > ./+build/feedbutton.esm.js",
		"release": "npm run bundle && cd ./+build && cp ../package.json ./package.json && np"
	}
}
